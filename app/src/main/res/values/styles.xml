<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">#8ADFD7</item>
        <item name="colorPrimaryDark">#8ADFD7</item>
        <item name="colorAccent">#3e4890</item>
        <item name="backgroundcolor">#FFFFFF</item>
        <item name="cardbackround">#FFFFFF</item>
        <item name="textcolor">#000</item>
        <item name="tintcolor">#FFFFFF</item>
        <item name="buttoncolor">#8ADFD7</item>
        <item name="toolbartextcolor">#3e4890</item>
        <item name="toolbarbackground">#FFFFFF</item>
        <item name="categorybordercolor">#8ADFD7</item>
        <item name="viewtextcolor">#3e4890</item>
        <item name="toolbarbackTint">#3e4890</item>
    </style>

    <style name="AppTheme.Base2" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="darktheme" parent="AppTheme.Base2">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#3e4890</item>
        <item name="backgroundcolor">#303030</item>
        <item name="cardbackround">#424242</item>
        <item name="textcolor">#ffff</item>
        <item name="tintcolor">#ffff</item>
        <item name="buttoncolor">#8ADFD7</item>
        <item name="toolbartextcolor">#ffff</item>
        <item name="toolbarbackground">#303030</item>
        <item name="categorybordercolor">#ffff</item>
        <item name="viewtextcolor">#ffff</item>
        <item name="toolbarbackTint">#ffff</item>
    </style>


    <style name="YellowCheck">
        <item name="colorControlNormal">@color/colorAccent
        </item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>
</resources>